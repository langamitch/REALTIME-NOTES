rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users can only access their own data
    match /users/{userId} {
      // Allow read/write if the user is authenticated and accessing their own data
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Allow access to user's subcollections (activeDevices and notes)
      match /{subcollection}/{documentId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // Alternative: More specific rules for better security
    // Uncomment this section and comment out the above rules if you want more granular control
    
